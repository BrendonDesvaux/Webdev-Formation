{% extends 'base.html.twig' %}

{% block title %}Hello JouerController!{% endblock %}

{% block body %}
{%for personnage in personnages %}
    <div class="card" style="width: 18rem;">
        <img src="{{ asset('avatars/'~personnage.avatar.getNomFicher())}}" class="card-img-top" alt="Profil pic">
        <div class="card-body">
            <h5 class="card-title">{{personnage.nom}}{{personnage.prenom}}</h5>
            <a href="{{path('app_choix_aventure',{'idPersonnage': personnage.id})}}"  class="btn btn-primary">Jouer avec {{ personnage.prenom }} {{ personnage.nom }}</a>
        </div>
    </div>
{%else%}
    <p>Il n'y a pas de personnages</p>
{% endfor %}
{% endblock %}
